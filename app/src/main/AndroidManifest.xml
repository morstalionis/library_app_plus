<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.monumental_v2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Monumental_V2">

        <activity
            android:name=".Read_Lit_Entry"
            android:exported="false" />
        <activity
            android:name=".Update_Entry_Dialog"
            android:exported="false" />
        <activity
            android:name=".GreatWorks"
            android:exported="false"
            android:label="Great Works"
            android:theme="@style/Theme.Monumental_V2.NoActionBar" />
        <activity
            android:name=".People"
            android:exported="false" />
        <activity
            android:name=".Wonder_Viewer"
            android:exported="false" />
        <activity
            android:name=".Wonders"
            android:exported="false" />
        <activity
            android:name=".Preferences"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="MONUMENTAL!">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AppPreferenceActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.monumental.AppPreferenceActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>